{% extends "userconfig/base.html" %}
{% block content %}
	<article class="media content-section">
		<div class="media-body">
		<div class="article-metadata">
            <p class="article-title"> </small>
		    <a class="btn btn-lg btn-primary" href="#">Configuration {{config.id}}</a>
			<a class="btn btn-primary btn-sm btn-outline-primary" href="{% url 'config-update' config.id %}">Update</a>
			<a class="btn btn-primary btn-sm btn-outline-danger" href="{% url 'config-delete' config.id %}">Delete</a>
			<a class="btn btn-primary btn-sm btn-outline-info" href="{% url 'crash-detail-user' config.id %}">Crash List</a>
            <p class="article-title"> Team : {{config.team}}
		</div>
		<div class="article-metadata">
            <small class="text-muted">Crash Time Slot :{{ config.timeslot }}</small>
            <small class="text-muted"> | End Date:{{ config.end_date| date:"F d, Y" }}</small>
		</div>
		<div class="article-metadata">
            <p class="article-title">Slack Channel: {{ config.slack_channel}}</p>
            <p class="article-title">Email Address: {{ config.email_address }}</p>
		</div>
		<div class="article-metadata">
            <p class="article-title">Crash Count Bar : {{ config.crash_count }}</p>
            <sp class="article-title">Total User Affected :{{ config.total_user }}</p>
		</div>
		<div class="article-metadata">
            <p class="article-content">Files to Monitor: {{ config.files}}</p>
            <p class="article-content">Keywords to Check: {{ config.keywords}}</p>
		</div>
	</article>
{% endblock content %}